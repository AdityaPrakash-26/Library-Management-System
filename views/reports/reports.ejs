<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>Transaction List</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    </head>
    <body>
        <body class="d-flex text-white bg-dark">
            <div class = "container">
                <h1>Welcome to the Reports Section.</h1>
                <h3>Most Popular Books:</h3>
                <% var booksList = []; %>
                <!-- push the books which have been borrowed at least once -->
                <% for(let book of books){ %>
                    <% if(book.times_borrowed >= 1){ %>
                        <% booksList.push(book); %>
                    <% } %>
                <% } %>

                <% booksList.sort((a,b) => b.times_borrowed - a.times_borrowed); %>

                <ul>
                    <% for(let book of booksList){ %>
                        <li> <a href="/books/<%=book._id%>"><%=book.title%></a> - Borrowed <%=book.times_borrowed%> times. </li>
                    <% } %>
                </ul>

                <h3>Most Paying Members:</h3>
                <% var membersList = []; %>
                <!-- push the members which have borrowed at least once -->
                <% for(let member of members){ %>
                    <% if(member.total_amount_paid >= 1){ %>
                        <% membersList.push(member); %>
                    <% } %>
                <% } %>

                <% membersList.sort((a,b) => b.total_amount_paid - a.total_amount_paid); %>

                <ul>
                    <% for(let member of membersList){ %>
                        <li> <a href="/members/<%=member._id%>"><%=member.name%></a> - Paid Rs. <%=member.total_amount_paid%> </li>
                    <% } %>
                </ul>
                <div class="col-md-6">
                    <a href="/" class="btn btn-primary btn-lg btn-block">Go back</a>
                </div>
            </div>
        </body>
    </body>
</html>